// Design System Tokens for Kagi - Stylus Variables
// Import this file in components to use consistent design values

// Colors - Primary
$color-primary = #FFC107
$color-primary-dark = #FFB300
$color-primary-light = #FFF9C4
$color-primary-lighter = #FFECB3

// Gradients
$gradient-primary = linear-gradient(135deg, #FFC107 0%, #FFB300 100%)
$gradient-light = linear-gradient(135deg, #FFF9C4 0%, #FFECB3 100%)
$gradient-subtle = linear-gradient(135deg, #FAFAFA 0%, #F5F5F5 100%)

// Semantic Colors
$color-success = #4CAF50
$color-success-light = #C8E6C9
$color-danger = #FF5252
$color-danger-light = #FFCDD2
$color-warning = #FF9800
$color-warning-light = #FFE0B2
$color-info = #2196F3
$color-info-light = #BBDEFB

// Neutral Colors
$color-text = #333333
$color-text-secondary = #666666
$color-text-light = #999999
$color-border = #E0E0E0
$color-border-light = #F5F5F5
$color-background = #FFFFFF
$color-background-light = #F9F9F9
$color-background-dark = #F5F5F5

// Spacing
$spacing-xs = 0.25rem
$spacing-sm = 0.5rem
$spacing-md = 1rem
$spacing-lg = 1.5rem
$spacing-xl = 2rem
$spacing-xxl = 3rem
$spacing-xxxl = 4rem

// Border Radius
$radius-sm = 4px
$radius-md = 8px
$radius-lg = 12px
$radius-xl = 20px
$radius-round = 50%
$radius-pill = 50px

// Shadows
$shadow-sm = 0 2px 4px rgba(0, 0, 0, 0.08)
$shadow-md = 0 4px 8px rgba(0, 0, 0, 0.1)
$shadow-lg = 0 8px 16px rgba(0, 0, 0, 0.12)
$shadow-xl = 0 10px 40px rgba(0, 0, 0, 0.15)
$shadow-primary = 0 4px 12px rgba(255, 193, 7, 0.25)
$shadow-primary-lg = 0 8px 24px rgba(255, 193, 7, 0.3)
$shadow-hover = 0 8px 20px rgba(0, 0, 0, 0.12)
$shadow-hover-primary = 0 8px 20px rgba(255, 193, 7, 0.3)

// Typography
$font-family = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif
$font-mono = "Monaco", "Courier New", monospace

$font-xs = 0.75rem
$font-sm = 0.875rem
$font-base = 1rem
$font-lg = 1.125rem
$font-xl = 1.25rem
$font-xxl = 1.5rem
$font-xxxl = 2rem
$font-display = 3rem

$font-normal = 400
$font-medium = 500
$font-semibold = 600
$font-bold = 700

$line-tight = 1.2
$line-normal = 1.5
$line-relaxed = 1.8
$line-loose = 2

// Transitions
$transition-fast = all 0.15s ease
$transition-base = all 0.2s ease
$transition-slow = all 0.3s ease
$transition-transform = transform 0.2s ease
$transition-opacity = opacity 0.2s ease
$transition-colors = background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease
$transition-shadow = box-shadow 0.3s ease

// Breakpoints
$breakpoint-xs = 480px
$breakpoint-sm = 640px
$breakpoint-md = 768px
$breakpoint-lg = 1024px
$breakpoint-xl = 1280px
$breakpoint-xxl = 1536px

// Z-Index
$z-dropdown = 1000
$z-sticky = 1020
$z-fixed = 1030
$z-backdrop = 1040
$z-modal = 1050
$z-popover = 1060
$z-tooltip = 1070

// CSS Custom Properties for runtime theming
:root
	// Colors
	--color-primary $color-primary
	--color-primary-dark $color-primary-dark
	--color-primary-light $color-primary-light
	--color-primary-lighter $color-primary-lighter
	--color-success $color-success
	--color-danger $color-danger
	--color-warning $color-warning
	--color-info $color-info
	--color-text $color-text
	--color-text-secondary $color-text-secondary
	--color-text-light $color-text-light
	--color-border $color-border
	--color-border-light $color-border-light
	
	// Gradients
	--gradient-primary $gradient-primary
	--gradient-light $gradient-light
	--gradient-subtle $gradient-subtle
	
	// Spacing
	--spacing-xs $spacing-xs
	--spacing-sm $spacing-sm
	--spacing-md $spacing-md
	--spacing-lg $spacing-lg
	--spacing-xl $spacing-xl
	--spacing-xxl $spacing-xxl
	
	// Radius
	--radius-sm $radius-sm
	--radius-md $radius-md
	--radius-lg $radius-lg
	--radius-xl $radius-xl
	--radius-pill $radius-pill
	
	// Shadows
	--shadow-sm $shadow-sm
	--shadow-md $shadow-md
	--shadow-lg $shadow-lg
	--shadow-xl $shadow-xl
	--shadow-hover $shadow-hover
	--shadow-primary $shadow-primary
	
	// Typography
	--font-family $font-family
	--font-xs $font-xs
	--font-sm $font-sm
	--font-base $font-base
	--font-lg $font-lg
	--font-xl $font-xl
	--font-xxl $font-xxl
	--font-normal $font-normal
	--font-medium $font-medium
	--font-semibold $font-semibold
	--font-bold $font-bold
	--line-normal $line-normal
	--line-relaxed $line-relaxed
	
	// Transitions
	--transition-fast $transition-fast
	--transition-base $transition-base
	--transition-slow $transition-slow