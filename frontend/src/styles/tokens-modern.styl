// Modern Design System Tokens for Kagi
// Using CSS Custom Properties with Stylus fallbacks

// ========================================
// CSS Custom Properties Root
// ========================================
:root
	// Color Palette with semantic scales
	// Primary Colors (Amber/Yellow theme)
	--color-primary-50: #FFFDE7
	--color-primary-100: #FFF9C4
	--color-primary-200: #FFF59D
	--color-primary-300: #FFF176
	--color-primary-400: #FFEE58
	--color-primary-500: #FFC107  // Main primary
	--color-primary-600: #FFB300
	--color-primary-700: #FFA000
	--color-primary-800: #FF8F00
	--color-primary-900: #F57F17

	// Gray Scale
	--color-gray-50: #FAFAFA
	--color-gray-100: #F5F5F5
	--color-gray-200: #EEEEEE
	--color-gray-300: #E0E0E0
	--color-gray-400: #BDBDBD
	--color-gray-500: #9E9E9E
	--color-gray-600: #757575
	--color-gray-700: #616161
	--color-gray-800: #424242
	--color-gray-900: #212121

	// Semantic Colors with scales
	--color-success-50: #E8F5E9
	--color-success-100: #C8E6C9
	--color-success-500: #4CAF50
	--color-success-700: #388E3C
	--color-success-900: #1B5E20

	--color-danger-50: #FFEBEE
	--color-danger-100: #FFCDD2
	--color-danger-500: #F44336
	--color-danger-700: #D32F2F
	--color-danger-900: #B71C1C

	--color-warning-50: #FFF3E0
	--color-warning-100: #FFE0B2
	--color-warning-500: #FF9800
	--color-warning-700: #F57C00
	--color-warning-900: #E65100

	--color-info-50: #E3F2FD
	--color-info-100: #BBDEFB
	--color-info-500: #2196F3
	--color-info-700: #1976D2
	--color-info-900: #0D47A1

	// Surface Colors (layered UI)
	--surface-base: #FFFFFF
	--surface-raised: var(--color-gray-50)
	--surface-overlay: var(--color-gray-100)
	--surface-hover: rgba(255, 193, 7, 0.04)
	--surface-pressed: rgba(255, 193, 7, 0.08)

	// Gradients with CSS custom properties
	--gradient-primary: linear-gradient(135deg, var(--color-primary-500) 0%, var(--color-primary-600) 100%)
	--gradient-primary-light: linear-gradient(135deg, var(--color-primary-100) 0%, var(--color-primary-200) 100%)
	--gradient-surface: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-gray-100) 100%)
	--gradient-light: linear-gradient(135deg, #FFF9C4 0%, #FFECB3 100%)

	// Modern Spacing Scale (8px base)
	--space-1: 0.25rem   // 4px
	--space-2: 0.5rem    // 8px
	--space-3: 0.75rem   // 12px
	--space-4: 1rem      // 16px
	--space-5: 1.25rem   // 20px
	--space-6: 1.5rem    // 24px
	--space-8: 2rem      // 32px
	--space-10: 2.5rem   // 40px
	--space-12: 3rem     // 48px
	--space-16: 4rem     // 64px
	--space-20: 5rem     // 80px

	// Fluid Typography with clamp()
	--text-xs: clamp(0.75rem, 0.8vw + 0.5rem, 0.8rem)
	--text-sm: clamp(0.875rem, 1vw + 0.5rem, 0.9rem)
	--text-base: clamp(1rem, 1.2vw + 0.5rem, 1.1rem)
	--text-lg: clamp(1.125rem, 1.4vw + 0.5rem, 1.25rem)
	--text-xl: clamp(1.25rem, 1.6vw + 0.5rem, 1.5rem)
	--text-2xl: clamp(1.5rem, 2vw + 0.5rem, 2rem)
	--text-3xl: clamp(2rem, 3vw + 0.5rem, 3rem)
	--text-display: clamp(2.5rem, 4vw + 1rem, 4rem)

	// Font Weights
	--font-normal: 400
	--font-medium: 500
	--font-semibold: 600
	--font-bold: 700

	// Line Heights
	--leading-none: 1
	--leading-tight: 1.25
	--leading-snug: 1.375
	--leading-normal: 1.5
	--leading-relaxed: 1.625
	--leading-loose: 2

	// Border Radius with consistent scale
	--radius-none: 0
	--radius-sm: 0.25rem   // 4px
	--radius-md: 0.5rem    // 8px
	--radius-lg: 0.75rem   // 12px
	--radius-xl: 1rem      // 16px
	--radius-2xl: 1.25rem  // 20px
	--radius-full: 9999px

	// Modern Box Shadows (layered)
	--shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05)
	--shadow-base: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)
	--shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)
	--shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)
	--shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)
	--shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25)
	--shadow-inner: inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)

	// Primary colored shadows
	--shadow-primary: 0 4px 14px 0 rgba(255, 193, 7, 0.25)
	--shadow-primary-lg: 0 10px 30px -3px rgba(255, 193, 7, 0.3)
	--shadow-hover: 0 10px 20px -5px rgba(0, 0, 0, 0.15)

	// Transitions with timing functions
	--transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1)
	--transition-base: 200ms cubic-bezier(0.4, 0, 0.2, 1)
	--transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1)
	--transition-slower: 500ms cubic-bezier(0.4, 0, 0.2, 1)

	// Easing functions
	--ease-in: cubic-bezier(0.4, 0, 1, 1)
	--ease-out: cubic-bezier(0, 0, 0.2, 1)
	--ease-in-out: cubic-bezier(0.4, 0, 0.2, 1)
	--ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55)

	// Z-Index Scale
	--z-negative: -1
	--z-0: 0
	--z-10: 10
	--z-20: 20
	--z-30: 30
	--z-40: 40
	--z-50: 50
	--z-dropdown: 1000
	--z-sticky: 1020
	--z-fixed: 1030
	--z-backdrop: 1040
	--z-modal: 1050
	--z-popover: 1060
	--z-tooltip: 1070
	--z-max: 9999

	// Container widths
	--container-xs: 20rem    // 320px
	--container-sm: 24rem    // 384px
	--container-md: 28rem    // 448px
	--container-lg: 32rem    // 512px
	--container-xl: 36rem    // 576px
	--container-2xl: 42rem   // 672px
	--container-3xl: 48rem   // 768px
	--container-4xl: 56rem   // 896px
	--container-5xl: 64rem   // 1024px
	--container-6xl: 72rem   // 1152px
	--container-7xl: 80rem   // 1280px
	--container-full: 100%

	// Aspect Ratios
	--aspect-square: 1 / 1
	--aspect-video: 16 / 9
	--aspect-portrait: 3 / 4
	--aspect-landscape: 4 / 3
	--aspect-ultrawide: 21 / 9

// ========================================
// Dark Mode Support (future enhancement)
// ========================================
@media (prefers-color-scheme: dark)
	:root
		--surface-base: var(--color-gray-900)
		--surface-raised: var(--color-gray-800)
		--surface-overlay: var(--color-gray-700)
		--color-text: var(--color-gray-100)
		--color-text-secondary: var(--color-gray-400)
		--color-border: var(--color-gray-700)
		--color-border-light: var(--color-gray-800)

// ========================================
// Stylus Variables (backward compatibility)
// ========================================
$color-primary = var(--color-primary-500)
$color-primary-dark = var(--color-primary-600)
$color-primary-light = var(--color-primary-100)

$gradient-primary = var(--gradient-primary)
$gradient-light = var(--gradient-light)

$spacing-xs = var(--space-1)
$spacing-sm = var(--space-2)
$spacing-md = var(--space-4)
$spacing-lg = var(--space-6)
$spacing-xl = var(--space-8)

$radius-sm = var(--radius-sm)
$radius-md = var(--radius-md)
$radius-lg = var(--radius-lg)
$radius-xl = var(--radius-xl)

$shadow-sm = var(--shadow-sm)
$shadow-md = var(--shadow-md)
$shadow-lg = var(--shadow-lg)
$shadow-xl = var(--shadow-xl)

$font-xs = var(--text-xs)
$font-sm = var(--text-sm)
$font-base = var(--text-base)
$font-lg = var(--text-lg)
$font-xl = var(--text-xl)
$font-xxl = var(--text-2xl)

$transition-fast = var(--transition-fast)
$transition-base = var(--transition-base)
$transition-slow = var(--transition-slow)

// Breakpoints for container queries
$breakpoint-xs = 480px
$breakpoint-sm = 640px
$breakpoint-md = 768px
$breakpoint-lg = 1024px
$breakpoint-xl = 1280px
$breakpoint-xxl = 1536px